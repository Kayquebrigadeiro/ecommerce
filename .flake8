[flake8]
exclude =
    .git,
    __pycache__,
    */migrations/*,
    .venv,
    venv,
    env,
    htmlcov,
    .coverage,
    *.pyc,
    .DS_Store,
    .env

max-line-length = 127
max-complexity = 10

ignore =
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
